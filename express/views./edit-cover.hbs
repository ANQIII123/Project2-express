{{#extends 'base'}}

{{#block 'content'}}
<h1>Update cover</h1>
<form method="POST">
    <div>
        <label>Food Name:</label>
        <input type="text" class="form-control" name="covers" value="{{covers.name}}"/>
    </div>

    <div>
        <label>Calories</label>
        <input type="text" class="form-control" name="author" value="{{covers.author}}"/>
    </div>

    <div>
        <label>Tags</label>
        <input name="tags" class="form-check-input" type="checkbox" value="snack" {{#inArray covers.tags "normal"}}checked{{/inArray}}>
        <label class="form-check-label">Normal</label>
        <input name="tags" class="form-check-input" type="checkbox" value="healthy" {{#inArray covers.tags "accoustic"}}checked{{/inArray}}>
        <label class="form-check-label">Accoustic</label>
        <input name="tags" class="form-check-input" type="checkbox" value="homecooked" {{#inArray covers.tags "self-compose"}}checked{{/inArray}}/>
        <label class="form-check-label">Self-compose</label>
    </div>

    <div>
          <input type="submit" class="btn btn-primary mt-3"/>
    </div>  
</form>
{{/block}}

{{/extends}}